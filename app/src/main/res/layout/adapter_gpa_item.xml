<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gpa_classNameLayout"
            style="@style/style_score_Linear">
            <TextView
                style="@style/style_score_itemName"
                android:text="课程名称:" />
            <TextView
                android:id="@+id/gpa_className"
                style="@style/style_score_itemValue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gpa_classNatureLayout"
            style="@style/style_score_Linear">
            <TextView
                style="@style/style_score_itemName"
                android:text="课程性质:" />
            <TextView
                android:id="@+id/gpa_classNature"
                style="@style/style_score_itemValue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gpa_creditLayout"
            style="@style/style_score_Linear">
            <TextView
                android:text="学分:"
                style="@style/style_score_itemName" />
            <TextView
                android:id="@+id/gpa_credit"
                style="@style/style_score_itemValue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gpa_gpaLayout"
            style="@style/style_score_Linear">
            <TextView
                android:text="绩点:"
                style="@style/style_score_itemName" />
            <TextView
                android:id="@+id/gpa_gpa"
                style="@style/style_score_itemValue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gpa_GradeLayout"
            style="@style/style_score_Linear">
            <TextView
                android:text="成绩:"
                style="@style/style_score_itemName" />
            <TextView
                android:id="@+id/gpa_Grade"
                style="@style/style_score_itemValue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gpa_makeupGradeLayout"
            style="@style/style_score_Linear">
            <TextView
                android:text="补考成绩:"
                style="@style/style_score_itemName"/>
            <TextView
                android:id="@+id/gpa_makeupGrade"
                style="@style/style_score_itemValue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gpa_retakenGradeLayout"
            style="@style/style_score_Linear">
            <TextView
                android:text="重修成绩:"
                style="@style/style_score_itemName" />
            <TextView
                android:id="@+id/gpa_retakenGrade"
                style="@style/style_score_itemValue" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
