<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="130dp">


        <TextView
            android:id="@+id/laf_good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/laf_good_img"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/laf_good_img"
            android:drawableStart="@drawable/lost_goods"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/laf_good_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/laf_good_img"
            android:drawableStart="@drawable/laf_place"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/laf_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/laf_good_img"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/laf_good_img"
            android:drawableStart="@drawable/phone"
            android:layout_marginBottom="10dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/laf_good_img"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/laf_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible"
            android:scaleType="center"
            android:src="@drawable/menu_down" />

        <TextView
            android:id="@+id/put_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:textSize="12sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>